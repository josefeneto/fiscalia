# ============================================
# FISCALIA - Configurações de Ambiente
# ============================================

# ==================== LLM APIs ====================
# Groq API (Principal)
GROQ_API_KEY=your-key-here
GROQ_MODEL=groq/llama-3.3-70b-versatile

# OpenAI API (Alternativa)
OPENAI_API_KEY=your-key-here
OPENAI_MODEL=gpt-4o-mini

# LLM Provider Ativo (groq ou openai)
LLM_PROVIDER=openai

# ==================== Database ====================
# Tipo de Database (sqlite ou postgresql)
DB_TYPE=sqlite

# SQLite Configuration
SQLITE_DB_PATH=data/bd_fiscalia.db

# PostgreSQL Configuration (para Railway)
# DATABASE_URL=postgresql://user:password@host:port/database

# Railway Volume Mount (para persistência)
RAILWAY_VOLUME_MOUNT_PATH=/data

# ==================== Paths ====================
# Diretórios de Arquivos
ARQUIVOS_BASE_PATH=arquivos
ARQUIVOS_ENTRADOS=arquivos/entrados
ARQUIVOS_PROCESSADOS=arquivos/processados
ARQUIVOS_REJEITADOS=arquivos/rejeitados

# ==================== Aplicação ====================
# Ambiente (development, production)
ENVIRONMENT=development

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost

# ==================== Processamento ====================
# Limite de arquivos por batch - alterado de 100 para 500
MAX_FILES_PER_BATCH=100

# Tamanho máximo de arquivo (em MB) - alterado de 10 para 500
MAX_FILE_SIZE_MB=500 

# Timeout para processamento (segundos) - alterado de 300 para 600
PROCESSING_TIMEOUT=600

# ==================== Segurança ====================
# Secret Key para sessões (gerar uma chave única)
SECRET_KEY=your_secret_key_here_change_in_production

# ==================== CrewAI ====================
# Configurações CrewAI
CREWAI_VERBOSE=True
CREWAI_TELEMETRY_OPT_OUT=true
